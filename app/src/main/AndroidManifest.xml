<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.expensetracker">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".AddExpenseActivity"
            android:label="Add Transaction"
            android:parentActivityName=".MainActivity">
        </activity>

        <activity
            android:name=".CategoryManagerActivity"
            android:label="Manage Categories"
            android:parentActivityName=".MainActivity">
        </activity>

        <activity
            android:name=".RecurringTransactionsActivity"
            android:label="Recurring Transactions"
            android:parentActivityName=".MainActivity">
        </activity>

        <activity
            android:name=".AddRecurringTransactionActivity"
            android:label="Add Recurring Transaction"
            android:parentActivityName=".RecurringTransactionsActivity">
        </activity>
        <activity android:name=".SettingsActivity" />
        <activity android:name=".AnalyticsActivity" />
        <activity android:name=".PreviousMonthExpensesActivity" />

        <activity
            android:name=".BudgetManagerActivity"
            android:label="Manage Budgets"
            android:parentActivityName=".MainActivity">
        </activity>

    </application>

</manifest>